# Server Configuration
PORT=5000

# MongoDB Atlas Connection
# Get this from: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/china-map

# JWT Secret Key
# Generate a strong random string (32+ characters)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_strong_secret_key_minimum_32_characters_long

# Google Maps API Key
# Get this from: https://console.cloud.google.com/
# Enable "Maps JavaScript API" in your project
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Cloudinary Configuration (Required for Vercel/Production)
# Get free account at: https://cloudinary.com
# Leave empty for local development (will use local file storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
